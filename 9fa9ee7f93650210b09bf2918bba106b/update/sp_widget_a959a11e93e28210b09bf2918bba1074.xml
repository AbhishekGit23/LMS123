    .card {
      
      width: 200px;
      height: 120px;
      perspective: 1000px;
    }

    .content {
      width: 100%;
      height: 100%;
      position: relative;
      transition: transform 0.5s;
      transform-style: preserve-3d;
    }

    .card:hover .content {
      transform: rotateY(180deg);
    }

    .front, .back {
      position: absolute;
      width: 100%;
      height: 100%;
      backface-visibility: hidden;
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 40px;
      border-radius: 5px;
    }

    .front {
      background: white;
      color: #03446A;
    }

    .back {
      background: #03446A;
      color: white;
      transform: rotateY(180deg);
    }</css>
